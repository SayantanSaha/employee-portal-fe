<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /samekit/

    # ✅ Don't rewrite API requests (Laravel)
    RewriteCond %{REQUEST_URI} ^/employee_portal/api/ [NC]
    RewriteRule ^ - [L]

    # ✅ Don’t rewrite real files or folders (like JS, CSS, assets)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # ✅ Redirect all other requests to Angular's index.html
    RewriteRule ^ index.html [L]
</IfModule>


